<?xml version="1.0" encoding="utf-8"?>
<hibernate-configuration>
    <session-factory>

        <property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/hibernate_v2</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password">root</property>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name="hibernate.hbm2ddl.auto">validate</property>
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.format_sql">true</property>
        <property name="hibernate.use_sql_comments">true</property>
        <property name="hibernate.current_session_context_class">thread</property>

        <mapping class="com.entity.Rental"/>
        <mapping class="com.entity.Category"/>
        <mapping class="com.entity.FilmText"/>
        <mapping class="com.entity.Film"/>
        <mapping class="com.entity.Language"/>
        <mapping class="com.entity.Actor"/>
        <mapping class="com.entity.Address"/>
        <mapping class="com.entity.City"/>
        <mapping class="com.entity.Country"/>
        <mapping class="com.entity.Customer"/>
        <mapping class="com.entity.Inventory"/>
        <mapping class="com.entity.Payment"/>
        <mapping class="com.entity.Staff"/>
        <mapping class="com.entity.Store"/>

    </session-factory>
</hibernate-configuration>